{
  // =================================
  // プライバシー・セキュリティ
  // =================================
  "telemetry.telemetryLevel": "off",

  // =================================
  // エディタ - 基本設定
  // =================================
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.wordWrap": "on",
  "editor.accessibilitySupport": "off",
  "editor.minimap.enabled": false,
  "editor.lineNumbers": "relative",
  "diffEditor.ignoreTrimWhitespace": false,

  // =================================
  // エディタ - 外観・フォント
  // =================================
  "editor.fontFamily": "HackGen35 Console NF",
  "editor.fontSize": 14,
  "editor.lineHeight": 2,
  // "custom-ui-style.font.sansSerif": "HackGen35 Console NF",

  // =================================
  // ワークベンチ - UI・テーマ
  // =================================
  "workbench.colorTheme": "Nord Frost",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.activityBar.location": "hidden",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.editor.enablePreview": false,
  "workbench.panel.showLabels": false,
  "breadcrumbs.enabled": false,

  // =================================
  // ワークベンチ - ファイルエクスプローラー
  // =================================
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.decorations.badges": false,

  // =================================
  // ワークベンチ - ツリー表示
  // =================================
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.indent": 8,
  "material-icon-theme.hidesExplorerArrows": true,

  // =================================
  // ウィンドウ設定
  // =================================
  "window.title": "${folderName}",
  "window.zoomLevel": 2,

  // =================================
  // Zen Mode設定
  // =================================
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "zenMode.restore": true,

  // =================================
  // ターミナル設定
  // =================================
  "terminal.integrated.scrollback": 100000,
  "terminal.integrated.stickyScroll.enabled": true,
  "terminal.integrated.defaultProfile.osx": "tmux",
  "terminal.integrated.profiles.osx": {
    "tmux": {
      "path": "zsh",
      "args": [
        "-c",
        "tmux new-session -As $(basename $(dirname ${workspaceFolder}))/$(basename ${workspaceFolder})"
      ],
      "icon": "terminal-tmux"
    }
  },
  // "terminal.integrated.cwd": "${fileDirname}",

  // =================================
  // 拡張機能設定
  // =================================
  "extensions.ignoreRecommendations": true,
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // =================================
  // Python設定
  // =================================
  "python.defaultInterpreterPath": "~/.pyenv/shims/python",
  "python.createEnvironment.trigger": "off",
  "python.terminal.activateEnvironment": false,

  // =================================
  // GitHub Copilot設定
  // =================================
  "github.copilot.advanced": {},
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "コミットメッセージは日本語で記述し、冒頭にConventional Commits形式の要約、続けてファイルごとの具体的な変更内容を記載してください。"
    }
  ],

  // =================================
  // GitLens設定
  // =================================
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",

  // =================================
  // チャット・コマンド設定
  // =================================
  "chat.agent.enabled": true,
  "chat.commandCenter.enabled": false,

  // =================================
  // カスタムコマンド
  // =================================
  "zenMode.silentNotifications": false,
  "workbench.navigationControl.enabled": false,
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "gitlens.graph.layout": "editor",
  "zenMode.hideStatusBar": false,
  // =================================
  // which-key設定
  // =================================
  "whichkey.bindings": [
    {
      "key": "g",
      "name": "Git",
      "type": "bindings",
      "bindings": [
        {
          "key": "b",
          "name": "checkout",
          "type": "command",
          "command": "git.checkout"
        },
        {
          "key": "d",
          "name": "diff",
          "type": "command",
          "command": "git.viewChanges"
        },
        {
          "key": "D",
          "name": "diff (staged)",
          "type": "command",
          "command": "git.viewStagedChanges"
        },
        {
          "key": "c",
          "name": "commit",
          "type": "commands",
          "commands": [
            "github.copilot.git.generateCommitMessage",
            "git.commit",
            "git.commitAmend" // コミットメッセージ 確認＆修正
          ]
        },
        {
          "key": "s",
          "name": "stash",
          "type": "command",
          "command": "git.stash"
        },
        {
          "key": "S",
          "name": "pop stash",
          "type": "command",
          "command": "git.stashPop"
        },
        {
          "key": "p",
          "name": "push",
          "type": "commands",
          "commands": ["git.push", "gitlens.createPullRequestOnRemote"]
        },
        {
          "key": "P",
          "name": "pull",
          "type": "command",
          "command": "git.pull"
        },
        {
          "key": "g",
          "name": "graph",
          "type": "command",
          "command": "gitlens.showGraphPage"
        },
        {
          "key": "x",
          "name": "delete branch",
          "type": "command",
          "command": "git.deleteBranch"
        },
        {
          "key": "o",
          "name": "open file on remote",
          "type": "command",
          "command": "gitlens.openFileOnRemote"
        }
      ]
    },
    {
      "key": "e",
      "name": "Editor",
      "type": "bindings",
      "bindings": [
        {
          "key": "p",
          "name": "pin",
          "type": "command",
          "command": "workbench.action.pinEditor"
        },
        {
          "key": "P",
          "name": "unpin",
          "type": "command",
          "command": "workbench.action.unpinEditor"
        },
        {
          "key": "x",
          "name": "close",
          "type": "command",
          "command": "workbench.action.closeActivePinnedEditor"
        },
        {
          "key": "X",
          "name": "close other editors",
          "type": "command",
          "command": "workbench.action.closeOtherEditors"
        },
        {
          "key": "b",
          "name": "bookmark",
          "type": "command",
          "command": "bookmarks.toggle"
        },
        {
          "key": "B",
          "name": "bookmark (labeled)",
          "type": "command",
          "command": "bookmarks.toggleLabeled"
        },
        {
          "key": "l",
          "name": "list bookmarks",
          "type": "command",
          "command": "bookmarks.list"
        },
        {
          "key": "L",
          "name": "list all bookmarks",
          "type": "command",
          "command": "bookmarks.listFromAllFiles"
        }
      ]
    }
  ]
}
